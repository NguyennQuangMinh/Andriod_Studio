<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="   " />

    <RelativeLayout
        android:id="@+id/c"
        android:background="@drawable/vien"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_below="@id/textView2"
        android:layout_toLeftOf="@id/textView2"
        android:layout_width="150dp"
        android:layout_height="150dp">

        <TextView
            android:id="@+id/txtXe3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:text="Xe 3"
            android:textSize="23dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/d"
        android:background="@drawable/vien"
        android:layout_centerVertical="true"
        android:layout_below="@id/textView2"
        android:layout_toRightOf="@id/textView2"
        android:layout_marginEnd="10dp"
        android:layout_width="150dp"
        android:layout_height="150dp">

        <TextView
            android:id="@+id/txtXe4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:text="Xe 4"
            android:textSize="23dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/a"
        android:background="@drawable/vien"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_above="@id/textView2"
        android:layout_toLeftOf="@id/textView2"
        android:layout_width="150dp"
        android:layout_height="150dp">

        <!-- TextView hiển thị tên xe -->
        <TextView
            android:id="@+id/txtTempKV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:text="Xe 1"
            android:textSize="23dp" />

        <!-- TextView hiển thị dung lượng pin -->
        <TextView
            android:id="@+id/txtBatteryCapacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTempKV1"
            android:layout_marginTop="8dp"
            android:text="Dung lượng pin: "
            android:textSize="18dp" />

        <!-- TextView hiển thị tình trạng pin -->
        <TextView
            android:id="@+id/txtBatteryStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtBatteryCapacity"
            android:layout_marginTop="8dp"
            android:text="Tình trạng: "
            android:textSize="18dp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/b"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@id/textView2"
        android:layout_centerVertical="true"
        android:layout_marginLeft="1dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@id/textView2"
        android:background="@drawable/vien">


        <TextView
            android:id="@+id/txtHumKV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:text="Xe 2"
            android:textSize="23dp" />
    </RelativeLayout>

    <TextView
        android:paddingLeft="10dp"
        android:background="@drawable/vien"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView5"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="KHU VUC 1" />

    <RelativeLayout
        android:id="@+id/back"
        android:background="@drawable/vien"
        android:layout_marginTop="220dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/txtBackKV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Back"
            android:textSize="30dp" />
    </RelativeLayout>

</RelativeLayout>

